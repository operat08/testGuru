<div class="container m-4">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Level</th>
        <th scope="col">Quantity questions</th>
        <th scope="col" colspan="4">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.level %></td>
        <td><%= question_quantity test %></td>
        <td><%= link_to 'Show', test_path(test) %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Delete', test_path(test), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Start', start_test_path(test) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<button type="button" class="btn btn-light">
  <%= link_to "New Test", new_test_path %>
</button>